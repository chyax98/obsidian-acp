{
	"name": "obsidian-acp",
	"version": "0.4.0",
	"description": "Agent Client Protocol integration for Obsidian - Connect with Claude Code, Goose, OpenCode and custom AI agents",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "npm run lint && npm run type-check && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"type-check": "tsc --noEmit",
		"precommit": "npm run lint && npm run type-check && npm test"
	},
	"keywords": [
		"obsidian",
		"acp",
		"agent-client-protocol",
		"claude-code",
		"goose",
		"opencode",
		"ai-agent"
	],
	"author": "ACP Plugin Team",
	"license": "MIT",
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"@types/node": "^20.10.0",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"builtin-modules": "^3.3.0",
		"esbuild": "^0.19.10",
		"esbuild-jest": "^0.5.0",
		"eslint": "^8.56.0",
		"jest": "^29.7.0",
		"jest-mock-extended": "^3.0.5",
		"obsidian": "latest",
		"ts-jest": "^29.1.2",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@anthropic-ai/claude-agent-sdk": "^0.1.72",
		"@zed-industries/claude-code-acp": "^0.12.6"
	}
}
